{
    "name": "workspaces-publish",
    "version": "1.4.4",
    "description": "A library to publish packages of multiple workspaces.",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/workspaces-publish.git"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "bin",
        "dist"
    ],
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && rimraf bin && npm run build:types && npm run build:js",
        "build:watch": "npm run build -- --watch",
        "commit": "npx git-cz",
        "test": "jest --config ./test/jest.config.js",
        "test:coverage": "cross-env NODE_ENV=test jest --config ./test/jest.config.js --coverage",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "dev": "ts-node src/cli.ts",
        "start": "node dist/cli.cjs"
    },
    "keywords": [],
    "bin": {
        "workspaces-publish": "dist/cli.cjs",
        "workspaces-publish-esm": "dist/cli.mjs"
    },
    "license": "MIT",
    "dependencies": {
        "cac": "^6.7.14",
        "consola": "^3.2.3",
        "fast-glob": "^3.3.2",
        "hapic": "^2.5.1",
        "libnpmpack": "^7.0.4",
        "libnpmpublish": "^9.0.9"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-swc": "^0.3.1",
        "@swc/core": "^1.7.28",
        "@swc/jest": "^0.2.36",
        "@tada5hi/commitlint-config": "^1.2.2",
        "@tada5hi/eslint-config-typescript": "^1.2.12",
        "@tada5hi/semantic-release": "^0.3.1",
        "@tada5hi/tsconfig": "^0.5.1",
        "@types/jest": "^29.5.12",
        "@types/libnpmpublish": "^9.0.1",
        "@types/node": "^22.7.4",
        "@types/pacote": "^11.1.8",
        "cross-env": "^7.0.3",
        "eslint": "^8.54.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "rollup": "^4.22.5",
        "semantic-release": "^22.0.8",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2"
    }
}
