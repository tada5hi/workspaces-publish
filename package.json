{
    "name": "workspaces-publish",
    "type": "module",
    "version": "1.6.0",
    "description": "A library to publish packages of multiple workspaces.",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/workspaces-publish.git"
    },
    "module": "./dist/index.mjs",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs"
        }
    },
    "files": [
        "bin",
        "dist"
    ],
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && rimraf bin && npm run build:types && npm run build:js",
        "build:watch": "npm run build -- --watch",
        "commit": "npx git-cz",
        "test": "cross-env NODE_ENV=test vitest run --config test/vitest.config.ts",
        "test:coverage": "cross-env NODE_ENV=test vitest run --config test/vitest.config.ts --coverage",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "dev": "ts-node src/cli.ts",
        "start": "node dist/cli.cjs"
    },
    "keywords": [],
    "bin": {
        "workspaces-publish": "dist/cli.mjs"
    },
    "license": "MIT",
    "dependencies": {
        "cac": "^6.7.14",
        "consola": "^3.4.2",
        "fast-glob": "^3.3.3",
        "hapic": "^2.8.1",
        "libnpmpack": "^9.1.0",
        "libnpmpublish": "^11.1.3",
        "semver": "^7.7.4"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^16.0.2",
        "@rollup/plugin-swc": "^0.4.0",
        "@swc/core": "^1.15.11",
        "@tada5hi/commitlint-config": "^1.2.7",
        "@tada5hi/eslint-config-typescript": "^1.2.18",
        "@tada5hi/tsconfig": "^0.7.0",
        "@types/libnpmpublish": "^9.0.1",
        "@types/node": "^25.2.1",
        "@types/pacote": "^11.1.8",
        "@types/semver": "^7.7.1",
        "@vitest/coverage-v8": "^4.0.18",
        "cross-env": "^10.1.0",
        "eslint": "^8.54.0",
        "husky": "^9.1.7",
        "rollup": "^4.57.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "publishConfig": {
        "access": "public"
    }
}
