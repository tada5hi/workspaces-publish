{
    "name": "workspaces-publish",
    "version": "1.0.0",
    "description": "A library to publish packages of multiple workspaces.",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/workspaces-publish.git"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "bin",
        "dist"
    ],
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && rimraf bin && npm run build:types && npm run build:js",
        "build:watch": "npm run build -- --watch",
        "commit": "npx git-cz",
        "test": "jest --config ./test/jest.config.js",
        "test:coverage": "cross-env NODE_ENV=test jest --config ./test/jest.config.js --coverage",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "dev": "ts-node src/index.ts",
        "start": "node dist/index.cjs"
    },
    "keywords": [],
    "bin": {
        "workspaces-publish": "dist/index.cjs",
        "workspaces-publish-esm": "dist/index.mjs"
    },
    "license": "MIT",
    "dependencies": {
        "cac": "^6.7.14",
        "consola": "^3.2.3",
        "glob": "^10.3.10",
        "libnpmpack": "^6.0.4",
        "libnpmpublish": "^9.0.3",
        "pacote": "^17.0.5"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@swc/core": "^1.3.99",
        "@tada5hi/commitlint-config": "^1.1.3",
        "@tada5hi/eslint-config-typescript": "^1.2.6",
        "@tada5hi/semantic-release": "^0.3.0",
        "@tada5hi/tsconfig": "^0.5.0",
        "@types/jest": "^27.5.0",
        "@types/libnpmpublish": "^4.0.6",
        "@types/node": "^20.10.0",
        "@types/pacote": "^11.1.8",
        "cross-env": "^7.0.3",
        "eslint": "^8.54.0",
        "husky": "^8.0.3",
        "jest": "^27.5.1",
        "rollup": "^4.5.2",
        "semantic-release": "^22.0.8",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
